@model IEnumerable<uasmvc.Models.pembayaran>

@{
    ViewBag.Title = "Pembayaran";
}

<h2>Pembayaran</h2>

<p class="btn btn-default">
    @Html.ActionLink("Create New", "Create")
</p>
<p></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tgl_bayar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total_bayar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status_bayar)
        </th>
