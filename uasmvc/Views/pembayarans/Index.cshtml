    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tgl_bayar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total_bayar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status_bayar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reservasi.status_reserv)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PembayaranID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PembayaranID }) |
